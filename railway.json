{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": [
            "pip3 install --upgrade pip",
            "pip3 install -r requirements.txt",
            "playwright install chromium"
          ]
        },
        "start": {
          "cmd": "python3 main.py"
        }
      }
    }
  }
}
