{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["pip install -r requirements.txt", "playwright install chromium"]
        },
        "start": {
          "cmd": "uvicorn main:app --host 0.0.0.0 --port 8000"
        }
      }
    }
  }
}
